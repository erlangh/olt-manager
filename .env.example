# OLT Manager Environment Configuration
# Copy this file to .env and update the values according to your environment

# Database Configuration
DATABASE_URL=sqlite:///./olt_manager.db
# For PostgreSQL: postgresql://username:password@localhost/database_name
# For MySQL: mysql://username:password@localhost/database_name

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
APP_NAME=OLT Manager
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration (Frontend URLs that can access the API)
CORS_ORIGINS=["http://localhost:3000", "http://localhost", "https://your-domain.com"]

# SNMP Configuration (for OLT communication)
SNMP_COMMUNITY=public
SNMP_VERSION=2c
SNMP_TIMEOUT=5
SNMP_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/olt_manager.log

# Email Configuration (for notifications - optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_USE_TLS=true

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379/0

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/olt-manager/backups

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL_SECONDS=300
HEALTH_CHECK_ENABLED=true

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=["csv", "xlsx", "json"]

# Timezone
TIMEZONE=Asia/Jakarta

# Development Configuration (only for development)
# RELOAD=true
# WORKERS=1