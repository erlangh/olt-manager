# Database Configuration
DATABASE_URL=postgresql://oltuser:oltpass123@localhost:5432/olt_manager
DATABASE_NAME=olt_manager
DATABASE_USER=oltuser
DATABASE_PASSWORD=oltpass123
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
DEBUG=true
APP_NAME=OLT Manager
APP_VERSION=1.0.0
API_V1_STR=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# SNMP Configuration
DEFAULT_SNMP_COMMUNITY=public
DEFAULT_SNMP_VERSION=2c
DEFAULT_SNMP_PORT=161
SNMP_TIMEOUT=5
SNMP_RETRIES=3

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads
BACKUP_DIR=./backups

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC

# Monitoring Configuration
PERFORMANCE_DATA_RETENTION_DAYS=30
ALARM_RETENTION_DAYS=90
MONITORING_INTERVAL=60  # seconds

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false
EMAIL_FROM=noreply@oltmanager.local

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_APP_NAME=OLT Manager
REACT_APP_VERSION=1.0.0

# Production Configuration
ENVIRONMENT=development
WORKERS=4
HOST=0.0.0.0
PORT=8000